
<div id="splash_background">
	<%= image_tag('SPLASH/splash_bg.jpg', :class => 'splash_bg', :alt => 'LyricsNMusic') %>
</div>

<div id="splash_content">
	<div id="splash_image">
		<%= image_tag('SPLASH/splash_image.png', :class => 'splash_image', :alt => 'LyricsNMusic') %>
	</div>
	<div id="splash_form">
    <% if !flash[:success] %>
		<%= image_tag('SPLASH/splash_image_info.jpg', :class => 'splash_image_info', :alt => 'LyricsNMusic') %>		
	<% end %>
<%= form_for(:invite) do |f| %>

	<% if @invite && @invite.errors.any? %>
	<div id="error_explanation">
			<span class="errMsg"><%= @invite.errors.full_messages.first %></span>
	</div>
	<%= f.text_field(:email, :size => '30', :class => 'splash_email_field') %>
	<%= f.hidden_field(:email_sent, :value => 'no') %>
	<%= image_submit_tag("SPLASH/splash_button_go.png", :class => 'splash_button') %>

	<%elsif flash[:success] %>
		<br/>
		<p class="successText">
		<%= flash[:success] %><br/>
		</p>		
		<span class="successText_small">Share this with your friends</span><br/><br/>
		<iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.lyricsnmusic.com&amp;layout=button_count&amp;show_faces=true&amp;width=110&amp;action=like&amp;font=arial&amp;colorscheme=light&amp;height=20" scrolling="no" frameborder="0" style="border:0; overflow:hidden; width:50px; height:20px" allowTransparency="true"></iframe>
		<a href="http://twitter.com/share" class="twitter-share-button" data-url="http://www.lyricsnmusic.com" data-text="Just signed up for a cool Lyric site that is launching soon - Join me" data-count="none" data-via="LyricsnnMusic">Tweet</a>
		<script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
		<%= mail_to 'yourfriend@address.com', image_tag('SPLASH/splash_icon_email.jpg', :style => 'margin-left: 2px;'), :subject => 'Check out LyricsNMusic!', :body => 'Join us at LyricsNMusic.com!' %>
	<% else %>
		<%= f.text_field(:email, :size => '30', :class => 'splash_email_field') %>
		<%= f.hidden_field(:email_sent, :value => 'no') %>
		<%= image_submit_tag("SPLASH/splash_button_go.png", :class => 'splash_button') %>
	<% end %>
<% end %>
<% if !flash[:success] %>
		<%= link_to image_tag('SPLASH/splash_icon_t.jpg', :class => 'splash_icons'), "http://twitter.com/LyricsnnMusic", :target => "_blank" %>		
		<%= link_to image_tag('SPLASH/splash_icon_fb.jpg', :class => 'splash_icons'), "http://www.facebook.com/pages/Lyrics-N-Music/129045307163582?sk=info", :target => "_blank" %>
	<% end %>
	</div>
</div>	
